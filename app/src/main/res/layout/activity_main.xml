<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <!-- Appbar
    <include
        layout="@layout/appbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
     //Appbar -->

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 앱바 구성 (툴바 포함) -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <!-- tool bar -->
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                >
                <!--툴바 뷰 생성 -->
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:layout_collapseMode="pin"
                    />
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <!-- //앱바 구성 (툴바 포함) -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 메인 비쥬얼 슬라이더 -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="300dp"

                android:layout_below="@id/viewRecyclerHotel" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--리사이클러뷰 연동 -->
                <!--제주 숙박 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:text="제주 숙박"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/viewRecyclerHotel"
                    android:layout_width="match_parent"
                    android:layout_height="320dp" />

                <!--제주 맛집 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:text="제주 맛집"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/viewRecyclerRestaurant"
                    android:layout_width="match_parent"
                    android:layout_height="320dp" />

                <!--제주 투어 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:text="제주 투어"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/viewRecyclerTour"
                    android:layout_width="match_parent"
                    android:layout_height="320dp" />

                <!--제주 축제 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:text="제주 축제"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/viewRecyclerFestival"
                    android:layout_width="match_parent"
                    android:layout_height="320dp" />

                <!--제주 쇼핑 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:text="제주 쇼핑"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/viewRecyclerShopping"
                    android:layout_width="match_parent"
                    android:layout_height="320dp" />

            </LinearLayout>

        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation View -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/main_drawer_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navi_header"
        app:menu="@menu/drawer_menu"/>
    <!-- //Navigation View -->






</androidx.drawerlayout.widget.DrawerLayout>